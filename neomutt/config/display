# how message list displayed
set index_format="%4C %Z %[!%Y.%m.%d %H:%M] %-15.15L (%?l?%4l&%4c?) %s"

# to split screen between pager and index
set pager_index_lines=15

# easier reading in terminal
set menu_scroll
set wrap=90

# default sorting mode
set sort_aux=last-date-received       
set sort=threads
set sort_re
set rfc2047_parameters=yes

# highlight root messages of each thread
color index red default "!~x ."