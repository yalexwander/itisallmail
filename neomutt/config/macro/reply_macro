# prevent using regular reply call
unbind index,pager r


# without quoute
macro pager,index ,r '|neomutt/utils/register/register.php -s reply<enter>:exec reply<enter>n:lua IAM.set_sendmail_args("-c /post -r")<enter>'

# with quote
macro pager,index ,R '|neomutt/utils/register/register.php -s reply<enter>:exec reply<enter>y:lua IAM.set_sendmail_args("-c /post -r")<enter>'

# |  - pipe message to command
# neomutt/utils/register/register.php -s reply<enter> - call register save command
# :exec reply<enter> - invode <reply>
# y - yes/no to quote
# :lua IAM.set_sendmail_args("-c /post -r")<enter> - prepare sendmail