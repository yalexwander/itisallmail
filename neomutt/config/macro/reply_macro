# without quoute
macro pager,index ,r '|neomutt/utils/register/register.php -s reply<enter>rn:lua IAM.set_sendmail_args("-c /post -r")<enter>'

# with quote
macro pager,index ,R '|neomutt/utils/register/register.php -s reply<enter>ry:lua IAM.set_sendmail_args("-c /post -r")<enter>'

# |  - pipe message to command
# neomutt/utils/register/register.php -s reply<enter> - call register save command
# r - invode <reply>
# y - yes/no to quote
# :lua IAM.set_sendmail_args("-c /post -r")<enter> - prepare sendmail