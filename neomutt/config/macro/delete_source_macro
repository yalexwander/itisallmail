# macro definition

macro index ,d ':lua IAM.set_sendmail_args("-c /delete")<enter>ba@b.c<enter>y:lua IAM.set_sendmail_args("")<enter>^D$y:lua mutt.message("Source deleted")<enter>'

# macro description

# :lua IAM.set_sendmail_args("-c /delete")<enter> -- set sendmail to delete mode
# b -- bounce message under cursor
# a@b.c<enter> -- set dummy recepient
# y -- send message
# :lua IAM.set_sendmail_args("")<enter> -- set sendmail to default mode
# ^D$y -- delete subthread under cursor
# :lua mutt.message("Source deleted")<enter> -- show status message